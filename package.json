{
  "name": "quick-power",
  "productName": "QuickPower",
  "version": "1.2.0",
  "description": "Un utilitaire simple pour planifier l'arrêt, le redémarrage ou la mise en veille prolongée du PC, avec icône de notification.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [
    "shutdown",
    "restart",
    "hibernate",
    "timer",
    "utility",
    "electron",
    "tray"
  ],
  "author": "ImShimao",
  "license": "MIT",
  "devDependencies": {
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "iconv-lite": "^0.6.3"
  },
  "build": {
    "appId": "com.ImShimao.quickpower",
    "productName": "QuickPower",
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico"
    }
  }
}
